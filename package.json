{
  "name": "AdvancedNode",
  "version": "0.0.5",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx jest",
    "migrate:test": "npx prisma migrate dev"
  },
  "keywords": [],
  "author": "Dave Cartwright",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "express": "^4.18.2",
    "prisma": "^5.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.16.14",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/bloomreach/**",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/jest.setup.js",
      "!**/src/app.ts",
      "!**/src/index.ts",
      "!**/src/server.ts",
      "!**/src/start-app.ts",
      "!**/src/apm.ts",
      "!**/src/cors.ts",
      "!**/src/swagger.ts",
      "!**/src/services/prisma.ts",
      "!**/src/graceful-shutdown.ts",
      "!**/src/routes/api-docs.ts",
      "!**/src/helpers/fetch.ts",
      "!**/src/helpers/prisma.ts",
      "!**/src/jobs/import-from-snowflake/index.ts",
      "!**/src/jobs/import-from-snowflake/snowflake.ts",
      "!**/src/scripts/temp-dev-test-data.gz.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 65,
        "functions": 70,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node"
  },
  "cspell": {
    "language": "en-GB",
    "dictionaries": [
      "cspell-custom-words"
    ],
    "dictionaryDefinitions": [
      {
        "name": "cspell-custom-words",
        "path": "./cspell-custom-words.txt",
        "addWords": true
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "arrowParens": "always",
    "printWidth": 100,
    "semi": true,
    "jsxSingleQuote": true
  }
}
